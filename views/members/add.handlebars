<div class="card card-body">
  <h3>Add a Member</h3>
    <form>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" placeholder="Name" required>
        </div>
        <div class="form-group col-md-6">
          <label for="email">Email</label>
          <input type="email" class="form-control" id="email" placeholder="Email" required>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="gender">Gender</label>
          <select class="form-control" name="gender" required>
          <option value="" disabled selected hidden>Select Gender</option>
          <option value="Female" >Female</option>
          <option value="Male" >Male</option>
        </select>
        </div>
      <div class="form-group col-md-6">
        <label for="telephone">Telephone</label>
        <input type="text" class="form-control" id="telephone" placeholder="Telephone" required>
        </div>
      </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="memberNo">Membership Number</label>
        <input type="text" class="form-control" id="memberNo" placeholder="Member Number" required>
      </div>
      <div class="form-group col-md-6">
        <label for="hfg">Home Fellowship Group</label>
        <select id="hfg" class="form-control" required>
          <option value="" disabled selected hidden>Select HFG</option>
          <option value="posta" >Posta</option>
          <option value="Syokanthi">Syokanthi</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label for="address">Address</label>
      <input type="text" class="form-control" id="address" placeholder="Posta Mtwapa, along Mombasa-Malindi highway" required>
    </div>

   <div class="form-group">
    <label for="ministries">Ministries (Ctr + click to select more than one)</label>
    <select multiple class="form-control" id="ministries" required>
      <option>Eves Ministry</option>
      <option>Youth & Teens</option>
      <option>Choir</option>
      <option>Marrieds</option>
      <option>Ushering</option>
    </select>
  </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
